@model CWhiteH60Store.Models.ProductCategory

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex justify-center mt-8">
    <div class="card bg-neutral-200 w-[32rem] shadow-lg">
        <div class="card-body items-center text-center">
            <h2 class="card-title">Details</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryID"/>
            <label class="form-control w-full">
                <div class="label">
                    <span class="label-text">Category</span>
                </div>
                <input asp-for="ProdCat" class="input input-bordered w-full" readonly />
            </label>
            <div class="card-actions justify-center mt-2">
                <a asp-action="Edit" asp-route-id="@Model?.CategoryID" class="btn btn-info px-8">Edit</a>
                <a asp-action="Index" class="btn btn-ghost px-8">Back to List</a>
            </div>
        </div>
    </div>
</div>