@model CWhiteH60Store.Models.ProductCategory

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex justify-center mt-8">
    <div class="card bg-neutral-200 w-[32rem] shadow-lg">
        <div class="card-body items-center text-center">
            <h2 class="card-title">Are you sure you want to delete this?</h2>
            <label class="form-control w-full">
                <div class="label">
                    <span class="label-text">Category</span>
                </div>
                <input asp-for="ProdCat" class="input input-bordered w-full" readonly/>
                @Html.ValidationMessage("Products", "", new { @class = "text-danger text-red-600 text-sm" })
            </label>
            <form asp-action="Delete" class="flex flex-col gap-2 w-full">
                <input type="hidden" asp-for="CategoryID"/>
                <div class="card-actions justify-center mt-2">
                    <input type="submit" value="Delete" class="btn btn-error px-8"/>
                    <a asp-action="Index" class="btn btn-ghost px-8">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>