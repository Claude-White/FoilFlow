<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>FlowFoil</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>
<body class="h-screen">
<header>
    <div class="navbar bg-base-100 border-b-2 fixed z-50">
        <div class="navbar-center flex">
            <a class="btn btn-ghost text-xl hover:text-white" asp-area="" asp-controller="Home" asp-action="Index">FoilFlow</a>
            @if (User.IsInRole("manager") || User.IsInRole("clerk")) {
                <ul class="menu menu-horizontal px-1 gap-2">
                    <li>
                        <a asp-area="" asp-controller="ProductCategory" asp-action="Index">Categories</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Customer" asp-action="Index">Customers</a>
                    </li>
                </ul>
            }
            <partial name="_LoginPartial"/>
        </div>
    </div>
</header>
<div class="pt-[4.2rem]">
    <main role="main">
        @RenderBody()
    </main>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await Component.InvokeAsync("Notyf")
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>