@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<div class="flex justify-center mt-8">
    <div class="card bg-neutral-200 w-[32rem] shadow-lg">
        <div class="card-body items-center text-center">
            <h2 class="card-title">Profile</h2>
            <div class="flex flex-col gap-2 w-full">
                @if (Model.DisplayConfirmAccountLink) {
                    <div>
                        <div>
                            This app does not currently have a real email sender registered.
                        </div>
                        <a id="confirm-link" class="btn btn-info px-8 mt-2" href="@Model.EmailConfirmationUrl">Click here to confirm your account</a>
                    </div>
                }
                else {
                    <div>
                        Please check your email to confirm your account.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
