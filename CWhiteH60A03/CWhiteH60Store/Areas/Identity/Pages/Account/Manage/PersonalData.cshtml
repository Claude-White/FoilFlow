@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="flex justify-center mt-8">
    <div class="card bg-neutral-200 w-[32rem] shadow-lg">
        <div class="card-body items-center text-center">
            <h2 class="card-title">Personal Data</h2>
            <div class="flex flex-col gap-2 w-full">
                <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
                <p>
                    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                </p>
                <div class="card-actions justify-center mt-2">
                    <a id="delete" asp-page="DeletePersonalData" class="btn btn-error">Delete</a>
                    <form id="download-data" asp-page="DownloadPersonalData" method="post">
                        <button class="btn btn-info px-8" type="submit">Download</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
